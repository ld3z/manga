---
interface Props {
  lang: string;
  type: string;
}

const { lang, type } = Astro.props;
---

<a 
  href={`/rss/${lang}/${type}.xml`} 
  class="inline-flex items-center gap-2 px-4 py-2 bg-secondary hover:bg-accent text-primary hover:text-white rounded-md transition-colors duration-200"
  target="_blank" 
  rel="noopener noreferrer"
>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="w-5 h-5" 
    viewBox="0 0 24 24" 
    fill="none" 
    stroke="currentColor" 
    stroke-width="2" 
    stroke-linecap="round" 
    stroke-linejoin="round"
  >
    <path d="M4 11a9 9 0 0 1 9 9"></path>
    <path d="M4 4a16 16 0 0 1 16 16"></path>
    <circle cx="5" cy="19" r="1"></circle>
  </svg>
  RSS Feed
</a>